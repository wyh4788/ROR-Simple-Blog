<h1>Blog</h1>

<% @articles.each do |article| %> 
  <h2><%= link_to article.title, article %></h2>
  <p><%= article.text %></p>
  <h2><%= link_to "edit", edit_article_path(article) %></h2>
  <h2><%= link_to "delete", article, :method => :delete %></h2>
  <hr />
<% end %>

<p><%= link_to "Add a New Article", new_article_path %></p>

